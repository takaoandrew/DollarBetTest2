<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friend_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andrewtakao.dollarbettest2.BetsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Requested"
        android:background="@color/betsRequestedTitleBackground" />

    <fragment
        android:name="com.andrewtakao.dollarbettest2.BetsRequestedListFragment"
        android:id="@+id/bets_requested_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Pending"
        android:background="@color/betsPendingTitleBackground" />

    <fragment
        android:name="com.andrewtakao.dollarbettest2.BetsPendingListFragment"
        android:id="@+id/bets_pending_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
